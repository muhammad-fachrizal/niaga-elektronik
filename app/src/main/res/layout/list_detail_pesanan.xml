<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/gambarProduk"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:paddingVertical="5dp"
        android:src="@drawable/novel"
        />

    <TextView
        android:id="@+id/textNamaProdukDB"
        android:layout_toRightOf="@+id/gambarProduk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="nama produk database"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textJumlahDB"
        android:layout_below="@+id/textNamaProdukDB"
        android:layout_toRightOf="@id/gambarProduk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jumlah"/>

    <ImageView
        android:id="@+id/gambarGratisOngkir"
        android:layout_toRightOf="@+id/textJumlahDB"
        android:layout_below="@+id/textNamaProdukDB"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:src="@drawable/gratis_ongkir"
        />

    <TextView
        android:id="@+id/textHargaDB"
        android:layout_below="@+id/gambarGratisOngkir"
        android:layout_toRightOf="@+id/gambarProduk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:text="harga database"
        android:textStyle="bold"
        android:textColor="@color/red"/>

    <TextView
        android:id="@+id/textTotalHarga"
        android:layout_below="@+id/textHargaDB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="Total Harga"/>

    <TextView
        android:id="@+id/textTotalHargaMerah"
        android:layout_below="@+id/textTotalHarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:text="Total Harga Merah"
        android:textStyle="bold"
        android:textColor="@color/red"/>

</RelativeLayout>