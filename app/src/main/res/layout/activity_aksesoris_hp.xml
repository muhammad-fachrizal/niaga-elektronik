<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AksesorisHpActivity">

    <ScrollView
        android:id="@+id/scrollAksesorisHp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="60dp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/aksesoris_hp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/textHarga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200000"
                    android:textStyle="bold"
                    android:padding="10dp"
                    />
                <ImageView
                    android:id="@+id/imageFavorite"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_favorite_24"
                    android:padding="10dp"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/textNamaProduk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Aksesoris Sony Xperia X Performance"
                />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="5dp"
                android:numStars="5"
                android:rating="0"
                android:progressTint="@color/ratingColor"
                style="?android:attr/ratingBarStyleSmall"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terjual 0"
                android:paddingLeft="5dp"
                android:paddingBottom="10dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dijual oleh"
                    android:paddingLeft="5dp"
                    />

                <TextView
                    android:id="@+id/textNamaToko"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:text="Muhammad Fachrizal"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/textNamaKota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="DKI Jakarta"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi"
                android:textStyle="bold"
                android:layout_margin="5dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/deskripsiAksesorisHp"
                android:ellipsize="end"
                android:maxLines="5"
                android:layout_margin="5dp"
                />

            <TextView
                android:id="@+id/textSelengkapnya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=">Selengkapnya"
                android:textStyle="bold"
                android:textColor="@color/purple"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ulasan"
                android:textStyle="bold"
                android:layout_margin="5dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Belum Ada Ulasan"
                android:gravity="center"
                android:layout_margin="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diskusi"
                android:textStyle="bold"
                android:layout_margin="5dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Belum Ada Diskusi"
                android:gravity="center"
                android:layout_margin="5dp"
                />


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/layoutTombolBeli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        android:background="@color/white"
        android:layout_alignParentBottom="true">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_message_24"
            android:background="@drawable/button_border_red"
            />

        <Button
            android:id="@+id/beliLangsungButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:text="Beli Langsung"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/orangeButton"
            />

        <Button
            android:id="@+id/keranjangButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:text="+Keranjang"
            android:textSize="12sp"
            android:textStyle="bold"
            />
    </LinearLayout>

</RelativeLayout>